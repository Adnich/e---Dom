<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.NoviStudentController"
            stylesheets="@../styles/nova-student-style.css"
            styleClass="scroll-pane"
            fitToWidth="true"
            prefWidth="500"
            prefHeight="600">

    <content>
        <VBox spacing="6" styleClass="novi-student-container, student-form-vbox">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <Label text="Dodavanje novog studenta"
                   styleClass="page-title"/>

            <Label text="Ime:" styleClass="student-field-label"/>
            <TextField fx:id="txtIme" styleClass="student-text-field"/>

            <Label text="Prezime:" styleClass="student-field-label"/>
            <TextField fx:id="txtPrezime" styleClass="student-text-field"/>

            <Label text="Ime jednog roditelja:" styleClass="student-field-label"/>
            <TextField fx:id="txtRoditelj" styleClass="student-text-field"/>

            <Label text="JMBG:" styleClass="student-field-label"/>
            <TextField fx:id="txtJMBG" styleClass="student-text-field"/>

            <Label text="Broj indeksa:" styleClass="student-field-label"/>
            <TextField fx:id="txtIndeks" styleClass="student-text-field"/>

            <Label text="Fakultet:" styleClass="student-field-label"/>
            <TextField fx:id="txtFakultet" styleClass="student-text-field"/>

            <Label text="Godina studija:" styleClass="student-field-label"/>
            <TextField fx:id="txtGodina" styleClass="student-text-field"/>

            <Label text="Prosjek:" styleClass="student-field-label"/>
            <TextField fx:id="txtProsjek" styleClass="student-text-field"/>

            <Label text="Apsolvent:" styleClass="student-field-label"/>
            <CheckBox fx:id="chkJeLiApsolvent"
                      styleClass="student-checkbox"
                      prefWidth="300"/>

            <Label text="Postdiplomac:" styleClass="student-field-label"/>
            <CheckBox fx:id="chkJeLiPostdiplomac"
                      styleClass="student-checkbox"
                      prefWidth="300"/>

            <Label text="Email:" styleClass="student-field-label"/>
            <TextField fx:id="txtEmail" styleClass="student-text-field"/>

            <Label text="Telefon:" styleClass="student-field-label"/>
            <TextField fx:id="txtTelefon" styleClass="student-text-field"/>

            <Label text="Adresa stanovanja:" styleClass="student-field-label"/>
            <TextField fx:id="txtAdresa" styleClass="student-text-field"/>

            <Label text="Socijalni status:" styleClass="student-field-label"/>
            <ComboBox fx:id="cmbSocijalniStatus"
                      styleClass="student-combo"
                      prefWidth="300"/>

            <!-- Spacing prije buttona -->
            <Region prefHeight="10"/>

            <Button text="Dalje â†’"
                    onAction="#onNextClicked"
                    styleClass="next-btn"/>
        </VBox>
    </content>
</ScrollPane>