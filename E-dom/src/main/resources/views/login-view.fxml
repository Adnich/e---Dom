<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.LoginController"
            prefWidth="1000" prefHeight="600"
            stylesheets="@../styles/login-style.css">

    <!-- LIJEVA STRANA – logo + opis -->
    <left>
        <VBox spacing="25"
              alignment="TOP_LEFT"
              styleClass="left-pane">
            <children>

                <!-- LOGO (CENTRIRAN) -->
                <HBox alignment="CENTER">
                    <children>
                        <ImageView fitWidth="190"
                                   preserveRatio="true"
                                   styleClass="left-logo">
                            <image>
                                <!-- logo stavi u: src/main/resources/images/e-domLOGO.png -->
                                <Image url="@../images/e-domLOGO.png"/>
                            </image>
                        </ImageView>
                    </children>
                </HBox>

                <Label text="Sistem za upravljanje studentskim domom"
                       wrapText="true"
                       styleClass="left-subtitle"/>

                <Label text="Pregled prijava, studenata i soba na jednom mjestu."
                       wrapText="true"
                       styleClass="left-text"/>

            </children>
        </VBox>
    </left>

    <!-- DESNA STRANA – login ekran -->
    <center>
        <StackPane styleClass="right-pane">
            <children>

                <!-- dekorativni krug -->
                <Pane styleClass="circle-decor"
                      StackPane.alignment="CENTER_RIGHT"/>

                <!-- login box -->
                <VBox spacing="35"
                      alignment="TOP_CENTER"
                      styleClass="login-container"
                      maxWidth="420">

                    <VBox spacing="8" alignment="CENTER_LEFT">
                        <children>
                            <Label text="Prijava u E-Dom"
                                   styleClass="login-title"/>
                        </children>
                    </VBox>

                    <VBox spacing="20"
                          alignment="CENTER_LEFT"
                          maxWidth="360">
                        <children>

                            <VBox spacing="6">
                                <Label text="Korisničko ime"
                                       styleClass="field-label"/>
                                <TextField fx:id="txtUsername"
                                           promptText="Unesite korisničko ime"
                                           styleClass="text-input"/>
                            </VBox>

                            <VBox spacing="6">
                                <Label text="Lozinka"
                                       styleClass="field-label"/>
                                <PasswordField fx:id="txtPassword"
                                               promptText="Unesite lozinku"
                                               styleClass="text-input"/>
                            </VBox>

                            <Hyperlink text="Zaboravili ste lozinku?"
                                       onAction="#onForgotPasswordClicked"
                                       styleClass="forgot-link"/>

                            <Button fx:id="btnLogin"
                                    text="Prijava"
                                    onAction="#onLoginClicked"
                                    maxWidth="Infinity"
                                    styleClass="primary-btn"/>

                            <Label fx:id="lblError"
                                   textFill="red"
                                   styleClass="error-label"/>

                            <HBox alignment="CENTER" spacing="5">
                                <Label text="Nemate nalog?"/>
                                <Hyperlink fx:id="linkRegister"
                                           text="Registracija"
                                           onAction="#onRegisterLinkClicked"
                                           styleClass="register-link"/>
                            </HBox>

                        </children>
                    </VBox>

                </VBox>
            </children>
        </StackPane>
    </center>

</BorderPane>
