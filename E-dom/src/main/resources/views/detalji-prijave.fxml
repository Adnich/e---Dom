<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.DetaljiPrijaveController"
            prefWidth="800" prefHeight="500"
            stylesheets="@../styles/detalji-prijave-style.css">

    <top>
        <VBox spacing="6" styleClass="header">
            <Label fx:id="lblNaslov" text="Detalji prijave" styleClass="header-title"/>
            <Label fx:id="lblInfo" styleClass="header-subtitle"/>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.55" styleClass="main-split">

            <VBox spacing="10" styleClass="card">
                <Label text="Dostavljeni dokumenti" styleClass="card-title"/>

                <TableView fx:id="tblDokumenti">
                    <columns>
                        <TableColumn fx:id="colNaziv" text="Naziv"/>
                        <TableColumn fx:id="colVrsta" text="Vrsta"/>
                        <TableColumn fx:id="colDatum" text="Datum"/>
                        <TableColumn fx:id="colBodovi" text="Bodovi"/>
                        <TableColumn fx:id="colDostavljen" text="Dostavljen"/>
                        <TableColumn fx:id="colPregled" text="Pregled" prefWidth="100"/>

                    </columns>
                </TableView>
            </VBox>

            <VBox spacing="10" styleClass="card">
                <Label text="Bodovanje" styleClass="card-title"/>
                <Label fx:id="lblUkupniBodovi" text="Ukupni bodovi: 0.0" styleClass="score-value"/>
            </VBox>

        </SplitPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="footer">
            <Button text="Zatvori" onAction="#onZatvori" defaultButton="true"/>
        </HBox>
    </bottom>

</BorderPane>
