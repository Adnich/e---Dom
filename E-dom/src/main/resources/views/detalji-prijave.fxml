<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.DetaljiPrijaveController"
            prefWidth="980" prefHeight="600"
            stylesheets="@../styles/detalji-prijave-style.css">


    <top>
        <VBox spacing="8" styleClass="header">

            <Label fx:id="lblNaslov" text="Detalji prijave" styleClass="header-title"/>

            <HBox spacing="12" alignment="CENTER_LEFT" styleClass="header-meta">

                <Label fx:id="lblInfo" text="Akademska godina: 2025" styleClass="header-subtitle"/>

                <Label fx:id="lblPrijavaId" text="Prijava #35" styleClass="header-pill"/>

                <Label fx:id="lblStatus" text="na pregledu" styleClass="status-pill status-info"/>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- opcionalno: badge ili quick info -->
                <Label text="Pregled u toku" styleClass="header-right-info"/>

            </HBox>

        </VBox>
    </top>


    <center>
        <GridPane styleClass="main-grid" hgap="18" vgap="18">

            <columnConstraints>
                <ColumnConstraints percentWidth="65" />
                <ColumnConstraints percentWidth="35" />
            </columnConstraints>

            <!-- LEFT: DOCUMENTS CARD -->
            <VBox spacing="12" styleClass="card" GridPane.columnIndex="0">

                <HBox alignment="CENTER_LEFT" spacing="12">
                    <Label text="Dostavljeni dokumenti" styleClass="card-title"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="lblKompletiranostText" text="Kompletiranost: 0%" styleClass="muted"/>
                </HBox>

                <ProgressBar fx:id="pbKompletiranost" progress="0.0" styleClass="progress"/>

                <TableView fx:id="tblDokumenti" styleClass="table-modern">
                    <columns>
                        <TableColumn fx:id="colNaziv" text="Naziv"/>
                        <TableColumn fx:id="colVrsta" text="Vrsta"/>
                        <TableColumn fx:id="colDatum" text="Datum"/>
                        <TableColumn fx:id="colBodovi" text="Bodovi"/>
                        <TableColumn fx:id="colDostavljen" text="Dostavljen"/>
                        <TableColumn fx:id="colPregled" text="" prefWidth="110"/>
                    </columns>
                </TableView>

                <VBox fx:id="emptyState"
                      visible="false"
                      managed="false"
                      spacing="6"
                      styleClass="empty-card">

                    <Label text="Nema dostavljenih dokumenata" styleClass="empty-title"/>
                    <Label text="Molimo dodajte potrebne dokumente da bi prijava bila kompletna."
                           styleClass="empty-subtitle"/>
                </VBox>

            </VBox>


            <!-- RIGHT: SIDE PANEL -->
            <VBox spacing="14" styleClass="side-panel" GridPane.columnIndex="1">

                <VBox styleClass="stat-card">
                    <Label text="Ukupni bodovi" styleClass="stat-title"/>
                    <Label fx:id="lblUkupniBodoviValue" text="0.0" styleClass="stat-value"/>
                </VBox>

                <VBox styleClass="stat-card">
                    <Label text="Dokumenti dostavljeni" styleClass="stat-title"/>
                    <Label fx:id="lblDostavljeniCount" text="0 / 0" styleClass="stat-value"/>
                </VBox>

                <VBox styleClass="stat-card">
                    <Label text="Status obrade" styleClass="stat-title"/>
                    <Label fx:id="lblStatusObrade" text="U toku" styleClass="stat-value-small"/>
                </VBox>

                <VBox spacing="10" styleClass="stat-card">
                    <Label text="Promijeni status" styleClass="stat-title"/>

                    <ComboBox fx:id="cmbStatusPrijave" styleClass="combo-modern"/>

                    <Button text="SaÄuvaj status"
                            fx:id="btnSacuvajStatus"
                            onAction="#onSacuvajStatus"
                            styleClass="btn-primary"/>
                </VBox>

            </VBox>

        </GridPane>
    </center>


    <!-- FOOTER -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="footer">
            <Button text="Zatvori" onAction="#onZatvori" defaultButton="true"/>
        </HBox>
    </bottom>

</BorderPane>
