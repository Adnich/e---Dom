<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.AdminController"
            prefHeight="600.0" prefWidth="900.0">

    <left>
        <VBox spacing="10" prefWidth="200" style="-fx-background-color: #111827; -fx-padding: 20.0;">
            <Label text="E-Dom Admin"
                   style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;"/>
            <Separator/>
            <Button text="Prijave"
                    onAction="#showPrijave"
                    maxWidth="Infinity"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;"/>
            <Button text="Studenti"
                    onAction="#showStudenti"
                    maxWidth="Infinity"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;"/>
        </VBox>
    </left>


    //ovdje je peding pravio problem...
    <center>
        <StackPane fx:id="contentArea"/>
    </center>


</BorderPane>
