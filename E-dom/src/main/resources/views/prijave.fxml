<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.prijaveController"
            stylesheets="@../styles/prijave.css"
            styleClass="anchor-pane"
            maxWidth="Infinity"
            maxHeight="Infinity">

    <children>
        <VBox spacing="18"
              AnchorPane.topAnchor="20"
              AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20"
              AnchorPane.bottomAnchor="20"
              styleClass="main-vbox"
              VBox.vgrow="ALWAYS">

            <!-- HEADER -->
            <HBox spacing="16" alignment="CENTER_LEFT">
                <Label text="Prijave studenata" styleClass="header-title"/>

                <TextField fx:id="txtSearch"
                           promptText="Pretraga: ime, prezime, status..."
                           prefWidth="340"
                           styleClass="search-input"/>

                <Region HBox.hgrow="ALWAYS"/>

                <MenuButton text="Sortiraj" fx:id="btnSortiraj" styleClass="menu-btn">
                    <items>
                        <MenuItem text="Ime A-Z" onAction="#sortImeAZ"/>
                        <MenuItem text="Ime Z-A" onAction="#sortImeZA"/>
                        <MenuItem text="Od najstarije" onAction="#sortIdUzlazno"/>
                        <MenuItem text="Od najnovije" onAction="#sortIdSilazno"/>
                        <MenuItem text="Bodovi Uzlazno" onAction="#sortBodoviUzlazno"/>
                        <MenuItem text="Bodovi Silazno" onAction="#sortBodoviSilazno"/>
                    </items>
                </MenuButton>

                <MenuButton text="Filtriraj" fx:id="btnFiltriraj" styleClass="menu-btn">
                    <items>
                        <Menu fx:id="menuFakulteti" text="Fakulteti"/>
                        <Menu fx:id="menuStatusPrijave" text="Status prijave"/>
                        <Menu fx:id="menuGodineStudija" text="Godina studija"/>
                    </items>
                </MenuButton>

                <Button text="Refresh" onAction="#onRefresh"/>


                <Button text="Nova prijava"
                        onAction="#onNovaPrijava"
                        styleClass="nova-prijava-btn"/>
            </HBox>

            <!-- TABLE -->
            <TableView fx:id="tblPrijave"
                       VBox.vgrow="ALWAYS"
                       maxWidth="Infinity"
                       maxHeight="Infinity"
                       styleClass="table-view">

                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="70"/>
                    <TableColumn fx:id="colIme" text="Ime" prefWidth="140"/>
                    <TableColumn fx:id="colPrezime" text="Prezime" prefWidth="160"/>
                    <TableColumn fx:id="colDatum" text="Datum" prefWidth="140"/>
                    <TableColumn fx:id="colAkGod" text="Akad. godina" prefWidth="140"/>
                    <TableColumn fx:id="colUkupniBodovi" text="Ukupni bodovi" prefWidth="140"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="180"/>
                    <TableColumn fx:id="colNapomena" text="Napomena" prefWidth="320"/>
                </columns>

            </TableView>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button fx:id="btnExportHtmlPdf" text="Export PDF (HTML)" onAction="#onExportHtmlPdf"/>
            </HBox>

        </VBox>
    </children>
</AnchorPane>
