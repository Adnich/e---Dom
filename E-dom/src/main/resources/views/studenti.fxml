<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.studentiController"
            stylesheets="@../styles/studenti-style.css"
            styleClass="anchor-pane">

    <children>
        <VBox spacing="18"
              AnchorPane.topAnchor="20"
              AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20"
              AnchorPane.bottomAnchor="20"
              styleClass="main-vbox"
              VBox.vgrow="ALWAYS">

            <!-- HEADER -->
            <BorderPane>

                <!-- LEFT -->
                <left>
                    <VBox spacing="10">
                        <Label text="Studenti" styleClass="header-title"/>

                        <TextField fx:id="txtSearch"
                                   promptText="Pretraga: ime, prezime, indeks, fakultet..."
                                   prefWidth="420"
                                   styleClass="search-input"/>
                    </VBox>
                </left>

                <!-- RIGHT -->
                <right>
                    <HBox spacing="14" alignment="CENTER_RIGHT">

                        <!-- REFRESH ICON -->
                        <Button onAction="#onRefresh"
                                styleClass="icon-refresh-btn">

                            <tooltip>
                                <Tooltip text="Osvježi podatke"/>
                            </tooltip>

                            <graphic>
                                <Label text="⟳" styleClass="refresh-icon"/>
                            </graphic>
                        </Button>

                        <!-- (po potrebi kasnije) -->
                    </HBox>
                </right>

            </BorderPane>

            <!-- FILTER BAR -->
            <HBox spacing="14" alignment="CENTER_LEFT">

                <MenuButton text="Sortiraj" fx:id="btnSortiraj" styleClass="menu-btn">
                    <items>
                        <MenuItem text="Ime A–Z" onAction="#sortImeAZ"/>
                        <MenuItem text="Ime Z–A" onAction="#sortImeZA"/>
                        <MenuItem text="ID uzlazno" onAction="#sortIdUzlazno"/>
                        <MenuItem text="ID silazno" onAction="#sortIdSilazno"/>
                        <MenuItem text="Prosjek uzlazno" onAction="#sortProsjekAsc"/>
                        <MenuItem text="Prosjek silazno" onAction="#sortProsjekDesc"/>
                    </items>
                </MenuButton>

                <MenuButton text="Filtriraj" fx:id="btnFiltriraj" styleClass="menu-btn">
                    <items>
                        <Menu fx:id="menuFakulteti" text="Fakulteti"/>
                        <Menu fx:id="menuStatus" text="Status prijave"/>
                        <Menu fx:id="menuGodina" text="Godina studija"/>
                    </items>
                </MenuButton>

            </HBox>

            <!-- TABLE -->
            <TableView fx:id="tblStudenti"
                       VBox.vgrow="ALWAYS"
                       styleClass="table-view">

                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="70"/>
                    <TableColumn fx:id="colIme" text="Ime" prefWidth="140"/>
                    <TableColumn fx:id="colPrezime" text="Prezime" prefWidth="160"/>
                    <TableColumn fx:id="colIndeks" text="Broj indeksa" prefWidth="170"/>
                    <TableColumn fx:id="colFakultet" text="Fakultet" prefWidth="260"/>
                    <TableColumn fx:id="colGodina" text="Godina" prefWidth="110"/>
                    <TableColumn fx:id="colProsjek" text="Prosjek" prefWidth="120"/>
                    <TableColumn fx:id="colStatus" text="Soc. status" prefWidth="260"/>
                </columns>

            </TableView>

            <!-- EXPORT -->
            <HBox>
                <Button fx:id="btnExportHtmlPdf"
                        text="Export PDF (HTML)"
                        onAction="#onExportHtmlPdf"/>
            </HBox>

        </VBox>
    </children>
</AnchorPane>
