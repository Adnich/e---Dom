<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.studentiController"
            stylesheets="@../styles/studenti-style.css"
            styleClass="root anchor-pane">

    <children>
        <VBox spacing="15"
              AnchorPane.topAnchor="20"
              AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20"
              AnchorPane.bottomAnchor="20"
              styleClass="main-vbox">

            <!-- HEADER -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="Studenti" styleClass="header-title"/>

                <TextField fx:id="txtSearch"
                           promptText="Pretraga: ime, prezime, indeks, fakultet..."
                           prefWidth="280"/>

                <Region HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- TABLE -->
            <TableView fx:id="tblStudenti"
                       styleClass="table-view"
                       VBox.vgrow="ALWAYS">

                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colIme" text="Ime" prefWidth="120"/>
                    <TableColumn fx:id="colPrezime" text="Prezime" prefWidth="140"/>
                    <TableColumn fx:id="colIndeks" text="Broj indeksa" prefWidth="140"/>
                    <TableColumn fx:id="colFakultet" text="Fakultet" prefWidth="180"/>
                    <TableColumn fx:id="colGodina" text="Godina" prefWidth="100"/>
                    <TableColumn fx:id="colProsjek" text="Prosjek" prefWidth="100"/>
                    <TableColumn fx:id="colStatus" text="Soc. status" prefWidth="160"/>
                </columns>

            </TableView>

        </VBox>
    </children>

</AnchorPane>
