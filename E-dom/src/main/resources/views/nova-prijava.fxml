<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>

<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.NovaPrijavaController"
            styleClass="prijava-scroll-pane"
            stylesheets="@../styles/nova-prijava-style.css"
            fitToWidth="true"
            prefWidth="480"
            prefHeight="600">

    <content>
        <VBox spacing="12" styleClass="nova-prijava-container">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <Label text="Nova prijava"
                   styleClass="prijava-title"/>

            <Separator styleClass="prijava-separator"/>

            <Label text="Akademska godina:"
                   styleClass="prijava-field-label"/>
            <TextField fx:id="txtAkGod"
                       promptText="2024"
                       styleClass="prijava-text-field"/>

            <Label text="Broj članova domaćinstva:"
                   styleClass="prijava-field-label"/>
            <TextField fx:id="txtClanovi"
                       promptText="4"
                       styleClass="prijava-text-field"/>

            <Label text="Udaljenost adrese stanovanja do doma (u km):"
                   styleClass="prijava-field-label"/>
            <TextField fx:id="txtUdaljenost"
                       promptText="43"
                       styleClass="prijava-text-field"/>

            <Separator styleClass="prijava-separator"/>

            <Label text="Dodatni kriteriji:"
                   styleClass="prijava-section-title"/>

            <CheckBox fx:id="chkIzbjeglica"
                      text="Izbjegli i raseljeni student (3 boda)"
                      styleClass="prijava-checkbox"/>

            <CheckBox fx:id="chkBratSestra"
                      text="Brat/sestra studiraju (2 boda)"
                      styleClass="prijava-checkbox"/>

            <Separator styleClass="prijava-separator"/>

            <VBox fx:id="vboxBranioci" spacing="10"/>

            <Separator styleClass="prijava-separator"/>

            <Label text="Napomena:"
                   styleClass="prijava-field-label"/>
            <TextArea fx:id="txtNapomena"
                      prefHeight="80"
                      styleClass="prijava-text-area"/>

            <!-- Spacing prije buttona -->
            <Region prefHeight="10"/>

            <Button text="Spremi"
                    onAction="#onSaveClicked"
                    styleClass="save-btn"/>
        </VBox>
    </content>
</ScrollPane>