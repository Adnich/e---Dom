<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.RangListaController">

    <top>
        <HBox spacing="12" style="-fx-padding: 15;">
            <Label text="Rang lista studenata"
                   style="-fx-font-size: 20px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="tblRangLista" prefHeight="600">

            <columns>
                <TableColumn fx:id="colRedniBroj" text="R.br" prefWidth="50"/>
                <TableColumn fx:id="colImePrezime" text="Ime i prezime" prefWidth="250"/>
                <TableColumn fx:id="colUkupniBodovi" text="Ukupni bodovi" prefWidth="120"/>
                <TableColumn fx:id="colDetalji" text="" prefWidth="100"/>
            </columns>

        </TableView>
    </center>

</BorderPane>
