<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.RangListaController"
            stylesheets="@../styles/rang-lista-style.css"
            styleClass="rang-root">

    <!-- TOP -->
    <top>
        <HBox spacing="12" styleClass="rang-header">
            <Label text="Rang lista studenata" styleClass="rang-title"/>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <!-- CENTER -->
    <center>
        <VBox styleClass="rang-card" spacing="14">

            <TableView fx:id="tblRangLista"
                       VBox.vgrow="ALWAYS"
                       styleClass="rang-table">

                <columns>
                    <TableColumn fx:id="colRedniBroj" text="R.br" prefWidth="70"/>
                    <TableColumn fx:id="colImePrezime" text="Ime i prezime" prefWidth="280"/>
                    <TableColumn fx:id="colUkupniBodovi" text="Ukupni bodovi" prefWidth="160"/>
                    <TableColumn fx:id="colDetalji" text="" prefWidth="140"/>
                </columns>

            </TableView>

        </VBox>
    </center>

</BorderPane>
