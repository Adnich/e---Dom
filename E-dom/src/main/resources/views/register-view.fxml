<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.RegisterController"
            prefWidth="1100" prefHeight="650"
            stylesheets="@../styles/register-style.css"
            styleClass="root">

    <!-- LIJEVA STRANA -->
    <left>
        <VBox spacing="26"
              alignment="TOP_LEFT"
              styleClass="left-pane">

            <!-- LOGO -->
            <HBox alignment="CENTER_LEFT">
                <children>
                    <ImageView fitWidth="170"
                               preserveRatio="true"
                               styleClass="left-logo">
                        <image>
                            <Image url="@../images/e-domLOGO.png"/>
                        </image>
                    </ImageView>
                </children>
            </HBox>

            <!-- HERO TEXT -->
            <Label text="Sistem za upravljanje studentskim domom"
                   wrapText="true"
                   styleClass="app-title"/>

            <Label text="Registrujte novog korisnika i dodijelite ulogu."
                   wrapText="true"
                   styleClass="left-subtitle"/>

            <!-- BENEFITS / INFO -->
            <VBox spacing="12" style="-fx-padding: 16 0 0 0;">
                <Label text="• Dodavanje novog korisnika u sistem" styleClass="left-text"/>
                <Label text="• Dodjela uloge (admin / osoblje)" styleClass="left-text"/>
                <Label text="• Sigurna kontrola pristupa" styleClass="left-text"/>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>

            <!-- OPTIONAL ILLUSTRATION -->
            <HBox alignment="BOTTOM_LEFT" style="-fx-padding: 18 0 0 0;">
                <children>

                </children>
            </HBox>

        </VBox>
    </left>

    <!-- DESNA STRANA -->
    <center>
        <StackPane styleClass="right-pane">
            <children>

                <!-- PREMIUM SOFT GLOW -->
                <Pane styleClass="glow-mint" StackPane.alignment="CENTER"/>
                <Pane styleClass="glow-yellow" StackPane.alignment="CENTER"/>

                <!-- REGISTER CONTAINER -->
                <StackPane alignment="CENTER" styleClass="register-container">

                    <!-- CARD -->
                    <VBox spacing="24"
                          alignment="TOP_LEFT"
                          maxWidth="520"
                          styleClass="register-card">

                        <!-- TITLE -->
                        <Label text="Registracija korisnika"
                               styleClass="register-title"/>

                        <!-- FORM -->
                        <VBox spacing="16" maxWidth="420">
                            <children>

                                <!-- Ime + Prezime -->
                                <HBox spacing="14">
                                    <children>
                                        <VBox spacing="6" HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label text="Ime" styleClass="field-label"/>
                                                <TextField fx:id="txtIme"
                                                           promptText="Unesite ime"
                                                           styleClass="text-input"/>
                                            </children>
                                        </VBox>

                                        <VBox spacing="6" HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label text="Prezime" styleClass="field-label"/>
                                                <TextField fx:id="txtPrezime"
                                                           promptText="Unesite prezime"
                                                           styleClass="text-input"/>
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>

                                <!-- Username -->
                                <VBox spacing="6">
                                    <children>
                                        <Label text="Korisničko ime" styleClass="field-label"/>
                                        <TextField fx:id="txtUsername"
                                                   promptText="Unesite korisničko ime"
                                                   styleClass="text-input"/>
                                    </children>
                                </VBox>

                                <!-- Password -->
                                <VBox spacing="6">
                                    <children>
                                        <Label text="Lozinka" styleClass="field-label"/>
                                        <PasswordField fx:id="txtPassword"
                                                       promptText="Unesite lozinku"
                                                       styleClass="text-input"/>
                                    </children>
                                </VBox>

                                <!-- Password Repeat -->
                                <VBox spacing="6">
                                    <children>
                                        <Label text="Ponovi lozinku" styleClass="field-label"/>
                                        <PasswordField fx:id="txtPassword2"
                                                       promptText="Ponovite lozinku"
                                                       styleClass="text-input"/>
                                    </children>
                                </VBox>

                                <!-- Role -->
                                <VBox spacing="6">
                                    <children>
                                        <Label text="Uloga" styleClass="field-label"/>
                                        <ComboBox fx:id="cmbUloga"
                                                  promptText="Odaberite ulogu"
                                                  styleClass="combo-input"
                                                  maxWidth="Infinity"/>
                                    </children>
                                </VBox>

                                <!-- BUTTONS -->
                                <HBox spacing="14" alignment="CENTER">
                                    <children>
                                        <Button text="Registruj"
                                                onAction="#onRegisterClicked"
                                                styleClass="primary-btn"
                                                prefWidth="190"/>

                                        <Button text="Nazad na prijavu"
                                                onAction="#onBackToLoginClicked"
                                                styleClass="secondary-btn"
                                                prefWidth="190"/>
                                    </children>
                                </HBox>

                                <!-- ERROR -->
                                <Label fx:id="lblError"
                                       styleClass="error-label"/>

                            </children>
                        </VBox>

                    </VBox>
                </StackPane>

            </children>
        </StackPane>
    </center>

</BorderPane>
