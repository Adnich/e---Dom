<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.RegisterController"
            prefWidth="1000" prefHeight="600"
            stylesheets="@../styles/register-style.css">

    <!-- LIJEVA STRANA -->
    <left>
        <VBox spacing="22"
              alignment="TOP_LEFT"
              styleClass="left-pane">

            <!-- logo centriran horizontalno -->
            <HBox alignment="CENTER_LEFT">
                <children>
                    <ImageView fitWidth="190" preserveRatio="true" styleClass="left-logo">
                        <image>
                            <Image url="@../images/e-domLOGO.png"/>
                        </image>
                    </ImageView>
                </children>
            </HBox>

            <Label text="Sistem za upravljanje studentskim domom"
                   wrapText="true"
                   styleClass="left-subtitle"/>

            <Label text="Registrujte novog korisnika i dodijelite ulogu."
                   wrapText="true"
                   styleClass="left-text"/>
        </VBox>
    </left>

    <!-- DESNA STRANA -->
    <center>
        <StackPane styleClass="right-pane">
            <children>

                <!-- dekor krug -->
                <Pane styleClass="circle-decor" StackPane.alignment="CENTER_RIGHT"/>

                <!-- container -->
                <VBox spacing="26"
                      alignment="TOP_CENTER"
                      styleClass="register-container"
                      maxWidth="520">

                    <!-- naslov -->
                    <VBox spacing="8" alignment="CENTER_LEFT" maxWidth="420">
                        <children>
                            <Label text="Registracija korisnika" styleClass="register-title"/>
                        </children>
                    </VBox>

                    <!-- forma -->
                    <VBox spacing="16" alignment="CENTER_LEFT" maxWidth="420">
                        <children>

                            <!-- Ime + Prezime u jednom redu -->
                            <HBox spacing="14">
                                <children>
                                    <VBox spacing="6" HBox.hgrow="ALWAYS">
                                        <children>
                                            <Label text="Ime" styleClass="field-label"/>
                                            <TextField fx:id="txtIme"
                                                       promptText="Unesite ime"
                                                       styleClass="text-input"/>
                                        </children>
                                    </VBox>

                                    <VBox spacing="6" HBox.hgrow="ALWAYS">
                                        <children>
                                            <Label text="Prezime" styleClass="field-label"/>
                                            <TextField fx:id="txtPrezime"
                                                       promptText="Unesite prezime"
                                                       styleClass="text-input"/>
                                        </children>
                                    </VBox>
                                </children>
                            </HBox>

                            <VBox spacing="6">
                                <children>
                                    <Label text="Korisničko ime" styleClass="field-label"/>
                                    <TextField fx:id="txtUsername"
                                               promptText="Unesite korisničko ime"
                                               styleClass="text-input"/>
                                </children>
                            </VBox>

                            <VBox spacing="6">
                                <children>
                                    <Label text="Lozinka" styleClass="field-label"/>
                                    <PasswordField fx:id="txtPassword"
                                                   promptText="Unesite lozinku"
                                                   styleClass="text-input"/>
                                </children>
                            </VBox>

                            <VBox spacing="6">
                                <children>
                                    <Label text="Ponovi lozinku" styleClass="field-label"/>
                                    <PasswordField fx:id="txtPassword2"
                                                   promptText="Ponovite lozinku"
                                                   styleClass="text-input"/>
                                </children>
                            </VBox>

                            <VBox spacing="6">
                                <children>
                                    <Label text="Uloga" styleClass="field-label"/>
                                    <ComboBox fx:id="cmbUloga"
                                              promptText="Odaberite ulogu"
                                              styleClass="combo-input"/>
                                </children>
                            </VBox>

                            <!-- dugmad -->
                            <HBox spacing="14" alignment="CENTER">
                                <children>
                                    <Button text="Registruj"
                                            onAction="#onRegisterClicked"
                                            styleClass="primary-btn"
                                            prefWidth="190"/>

                                    <Button text="Nazad na prijavu"
                                            onAction="#onBackToLoginClicked"
                                            styleClass="secondary-btn"
                                            prefWidth="190"/>
                                </children>
                            </HBox>

                            <Label fx:id="lblError" styleClass="error-label"/>

                        </children>
                    </VBox>

                </VBox>
            </children>
        </StackPane>
    </center>

</BorderPane>
