<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.HBox?>
<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.DodajDokumenteControllers.ProsjekDokumentController"
      spacing="10" style="-fx-padding: 15; -fx-border-color: lightgray; -fx-border-radius: 5;">

    <Label fx:id="lblOpis" text="Opis dokumenta" wrapText="true"/>

    <!-- RadioButton-i samo za višu godinu -->
    <HBox spacing="10">
        <RadioButton fx:id="rbUvjerenje" text="Uvjerenje sa fakulteta"/>
        <RadioButton fx:id="rbIndeks" text="Ovjerena kopija indeksa"/>
    </HBox>

    <!-- Broj položenih ispita samo za višu godinu -->
    <HBox spacing="10">
        <Label fx:id="lblIspiti" text="Broj položenih ispita:"/>
        <TextField fx:id="txtBrojPolozenih" promptText="0"/>
    </HBox>

    <CheckBox fx:id="chkDostavljen" text="Dokument dostavljen"/>

    <Button text="Dodaj dokument" onAction="#dodaj"/>
    <HBox spacing="10">
        <Button text="Dodaj PDF (opcionalno)"
                onAction="#onDodajPdf"/>
        <Label fx:id="lblPdf"
               text="PDF nije dodan"/>
    </HBox>

</VBox>
