<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="8"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.DodajDokumenteControllers.DodatniBodoviController">

    <Label fx:id="lblInfoDokument"
           text="Dodajte dokument za dodatne bodove"
           style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #2c5aa0;"/>

    <ComboBox fx:id="cmbDokument"
              promptText="Izaberite dokument"/>

    <Button text="Dodaj dokument"
            onAction="#dodajDokument"/>
    <HBox spacing="10">
        <Button text="Dodaj PDF (opcionalno)"
                onAction="#onDodajPdf"/>
        <Label fx:id="lblPdf"
               text="PDF nije dodan"/>
    </HBox>
</VBox>
