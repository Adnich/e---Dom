<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>

<VBox spacing="15"
      alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.IzmjenaLozinkeController"
      stylesheets="@../styles/izmjena-lozinke-style.css"
      prefWidth="400">

    <Label text="Reset lozinke"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Korisničko ime ili email -->
    <TextField fx:id="txtUsername"
               promptText="Korisničko ime ili email"/>

    <!-- Dugme za slanje koda na email -->
    <Button text="Pošalji kod"
            onAction="#onSendCodeClicked"/>

    <!-- Polje za unos koda (disable dok se ne pošalje kod) -->
    <TextField fx:id="txtCode"
               promptText="Unesite kod"
               disable="true"/>

    <!-- Polja za novu lozinku -->
    <PasswordField fx:id="txtNewPassword"
                   promptText="Nova lozinka"
                   disable="true"/>

    <PasswordField fx:id="txtConfirmPassword"
                   promptText="Potvrdi lozinku"
                   disable="true"/>

    <!-- Dugme za reset lozinke -->
    <Button fx:id="btnReset"
            text="Resetuj lozinku"
            onAction="#onResetClicked"
            disable="true"/>

    <!-- Labela za prikaz info/gresaka -->
    <Label fx:id="lblInfo"
           textFill="red"/>
</VBox>