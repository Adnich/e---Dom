<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.DodajDokumenteController"
            fitToWidth="true"
            hbarPolicy="NEVER"
            vbarPolicy="AS_NEEDED"
            styleClass="scroll-pane"
            stylesheets="@../styles/dodaj-dokument-style.css">

    <content>

        <!-- ✅ wrapper centriranje -->
        <StackPane styleClass="page-wrapper">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- ✅ CARD -->
            <VBox styleClass="card" spacing="18">

                <!-- ✅ HEADER -->
                <HBox alignment="CENTER_LEFT" spacing="16">
                    <VBox spacing="6">
                        <Label text="Dokumenti i domaćinstvo"
                               styleClass="page-title"/>

                        <Label text="Dodajte potrebne dokumente i unesite podatke o domaćinstvu."
                               styleClass="page-subtitle"/>
                    </VBox>

                    <Region HBox.hgrow="ALWAYS"/>
                </HBox>

                <!-- ✅ PROGRESS + STEPPER -->
                <VBox spacing="10">
                    <ProgressBar progress="0.75"
                                 styleClass="progress-top"/>

                    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="stepper">
                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="1" styleClass="step-dot"/>
                            <Label text="Osnovno" styleClass="step-label"/>
                        </HBox>

                        <Label text="—" styleClass="step-line"/>

                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="2" styleClass="step-dot"/>
                            <Label text="Prijava" styleClass="step-label"/>
                        </HBox>

                        <Label text="—" styleClass="step-line"/>

                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="3" styleClass="step-dot step-dot-active"/>
                            <Label text="Dokumenti" styleClass="step-label step-label-active"/>
                        </HBox>

                        <Label text="—" styleClass="step-line"/>

                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="4" styleClass="step-dot"/>
                            <Label text="Pregled" styleClass="step-label"/>
                        </HBox>
                    </HBox>
                </VBox>

                <!-- ✅ SECTION PILL -->
                <Label text="Dostavljanje dokumenata"
                       styleClass="section-pill"/>

                <Separator styleClass="soft-separator"/>

                <!-- ✅ ACCORDION -->
                <Accordion fx:id="accordionDokumenti"
                           styleClass="modern-accordion"/>

                <!-- ✅ FOOTER -->
                <HBox alignment="CENTER" spacing="16" styleClass="footer-box">
                    <Button text="Podnesi prijavu"
                            onAction="#onPodnesiPrijavu"
                            prefWidth="240"
                            styleClass="btn-next"/>
                </HBox>

            </VBox>
        </StackPane>

    </content>
</ScrollPane>
