<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.DashboardController"
      stylesheets="@../styles/dashboard-style.css"
      styleClass="dash-root"
      spacing="18">

    <!-- HEADER -->
    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="dash-header">
        <VBox spacing="4">
            <Label text="Pregled sistema" styleClass="dash-title"/>
            <Label text="Brzi pregled ključnih informacija" styleClass="dash-subtitle"/>
        </VBox>
    </HBox>

    <!-- CARDS -->
    <HBox spacing="16" styleClass="cards-row">

        <VBox spacing="10" styleClass="stat-card" HBox.hgrow="ALWAYS">
            <Label text="Studenti" styleClass="stat-label"/>
            <Label fx:id="lblStudenti" text="0" styleClass="stat-number"/>
            <Label text="Ukupan broj registrovanih studenata" styleClass="stat-hint"/>
        </VBox>

        <VBox spacing="10" styleClass="stat-card" HBox.hgrow="ALWAYS">
            <Label text="Prijave" styleClass="stat-label"/>
            <Label fx:id="lblPrijave" text="0" styleClass="stat-number"/>
            <Label text="Ukupan broj prijava u bazi" styleClass="stat-hint"/>
        </VBox>

        <!-- Treća kartica - placeholder (korisno i lijepo izgleda) -->
        <VBox spacing="10" styleClass="stat-card secondary-card" HBox.hgrow="ALWAYS">
            <Label text="Status" styleClass="stat-label"/>
            <Label text="Admin panel spreman" styleClass="stat-number-small"/>
            <Label text="Dalje: prijave, bodovi, rang-lista" styleClass="stat-hint"/>
        </VBox>

    </HBox>

    <!-- LOWER SECTION -->
    <HBox spacing="16" VBox.vgrow="ALWAYS">

        <!-- QUICK ACTIONS -->
        <VBox spacing="12" styleClass="panel" prefWidth="320">
            <Label text="Brze akcije" styleClass="panel-title"/>

            <Button text="Otvori prijave" styleClass="primary-btn" maxWidth="Infinity" />
            <Button text="Otvori studente" styleClass="secondary-btn" maxWidth="Infinity"/>

            <Separator opacity="0.25"/>

            <Label text="Savjet: prvo provjeri prijave, zatim bodovanje." styleClass="panel-hint" wrapText="true"/>
        </VBox>

        <!-- RECENT / INFO PANEL -->
        <VBox spacing="12" styleClass="panel" HBox.hgrow="ALWAYS">
            <Label text="Šta dalje?" styleClass="panel-title"/>

            <VBox spacing="8">
                <Label text="• Prijave: prikaz liste + promjena statusa (na pregledu/odobreno/odbijeno)" styleClass="panel-item" wrapText="true"/>
                <Label text="• Bodovi: unos po dokumentima + automatski zbir ukupnih bodova" styleClass="panel-item" wrapText="true"/>
                <Label text="• Rang lista: sortiranje po ukupnim bodovima (akademska godina)" styleClass="panel-item" wrapText="true"/>
            </VBox>
        </VBox>

    </HBox>

    
</VBox>
