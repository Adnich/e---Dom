<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.DashboardController"
      spacing="25"
      style="-fx-padding: 30;">

    <Label text="Pregled sistema"
           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #222;"/>

    <HBox spacing="30">

        <!-- KARTICA STUDENTI -->
        <VBox prefWidth="230" spacing="10"
              style="-fx-background-color: white;
                     -fx-background-radius: 15;
                     -fx-padding: 20;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 4);">

            <Label text="Broj studenata:"
                   style="-fx-font-size: 15px; -fx-text-fill: #666;"/>

            <Label fx:id="lblStudenti"
                   style="-fx-font-size: 34px; -fx-font-weight: bold; -fx-text-fill: #1a4fff;"/>
        </VBox>

        <!-- KARTICA PRIJAVA -->
        <VBox prefWidth="230" spacing="10"
              style="-fx-background-color: white;
                     -fx-background-radius: 15;
                     -fx-padding: 20;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 4);">

            <Label text="Broj prijava:"
                   style="-fx-font-size: 15px; -fx-text-fill: #666;"/>

            <Label fx:id="lblPrijave"
                   style="-fx-font-size: 34px; -fx-font-weight: bold; -fx-text-fill: #1a4fff;"/>
        </VBox>

    </HBox>

</VBox>
