<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.DashboardController"
      stylesheets="@../styles/dashboard-style.css"
      styleClass="dash-root"
      spacing="22"
      maxWidth="Infinity"
      maxHeight="Infinity">

    <!-- HEADER -->
    <VBox spacing="4" styleClass="dash-header">
        <Label text="Pregled sistema" styleClass="dash-title"/>
        <Label text="Brzi pregled ključnih informacija"
               styleClass="dash-subtitle"/>
    </VBox>

    <!-- ===== TOP STAT CARDS ===== -->
    <GridPane hgap="16">
        <columnConstraints>
            <ColumnConstraints percentWidth="33.3"/>
            <ColumnConstraints percentWidth="33.3"/>
            <ColumnConstraints percentWidth="33.4"/>
        </columnConstraints>

        <VBox GridPane.columnIndex="0"
              spacing="10"
              styleClass="stat-card">
            <Label text="Studenti" styleClass="stat-label"/>
            <Label fx:id="lblStudenti" text="0" styleClass="stat-number"/>
            <Label text="Ukupan broj registrovanih studenata"
                   styleClass="stat-hint"/>
        </VBox>

        <VBox GridPane.columnIndex="1"
              spacing="10"
              styleClass="stat-card">
            <Label text="Prijave" styleClass="stat-label"/>
            <Label fx:id="lblPrijave" text="0" styleClass="stat-number"/>
            <Label text="Ukupan broj prijava u bazi"
                   styleClass="stat-hint"/>
        </VBox>

        <VBox GridPane.columnIndex="2"
              spacing="10"
              styleClass="stat-card secondary-card">
            <Label text="Status" styleClass="stat-label"/>
            <Label text="Admin panel spreman"
                   styleClass="stat-number-small"/>
            <Label text="Dalje: prijave, bodovi, rang-lista"
                   styleClass="stat-hint"/>
        </VBox>
    </GridPane>

    <!-- ===== LOWER SECTION ===== -->
    <GridPane hgap="16"
              VBox.vgrow="ALWAYS">

        <columnConstraints>
            <ColumnConstraints percentWidth="35"/>
            <ColumnConstraints percentWidth="65"/>
        </columnConstraints>

        <!-- BRZE AKCIJE -->
        <VBox GridPane.columnIndex="0"
              spacing="14"
              styleClass="panel"
              alignment="TOP_LEFT">

            <Label text="Brze akcije" styleClass="panel-title"/>

            <Button text="Otvori prijave"
                    styleClass="primary-btn"
                    maxWidth="Infinity"
                    onAction="#goPrijave"/>

            <Button text="Otvori studente"
                    styleClass="secondary-btn"
                    maxWidth="Infinity"
                    onAction="#goStudenti"/>

            <Separator opacity="0.25"/>

            <Label text="Savjet: prvo provjeri prijave, zatim bodovanje."
                   styleClass="panel-hint"
                   wrapText="true"/>
        </VBox>

        <!-- ŠTA DALJE -->
        <VBox GridPane.columnIndex="1"
              spacing="14"
              styleClass="panel"
              VBox.vgrow="ALWAYS">

            <Label text="Šta dalje?" styleClass="panel-title"/>

            <VBox spacing="10">
                <Label text="• Prijave: prikaz liste + promjena statusa (na pregledu / odobreno / odbijeno)"
                       styleClass="panel-item"
                       wrapText="true"/>

                <Label text="• Bodovi: unos po dokumentima + automatski zbir ukupnih bodova"
                       styleClass="panel-item"
                       wrapText="true"/>

                <Label text="• Rang lista: sortiranje po ukupnim bodovima (akademska godina)"
                       styleClass="panel-item"
                       wrapText="true"/>
            </VBox>
        </VBox>

    </GridPane>

</VBox>
